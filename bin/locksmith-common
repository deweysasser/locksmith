#!/bin/bash
# Purpose:  common functions for locksmith programs.  Not exectuable itself.

getConfigDir() {
    echo $HOME/.locksmith
}

ensureConfigDir() {
    path="$1"
    dir=`getConfigDir`
    test -d "$dir/$path" || mkdir -p "$dir/$path"
    echo "$dir/$path"
}

fileEscape() {
    echo "$@" | tr '@' '_'
}