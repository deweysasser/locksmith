#!/bin/bash

# Purpose:  a mock SSH command


testbindir=`dirname $0`
testdir=`dirname $testbindir`

mockdir="${MOCKSERVERS:-/tmp/mock-servers}"


for a in "$@"; do
    if [ "x$a" !=  "x-q" ] ; then
        na=`echo $a | perl -p -e "BEGIN { \\$t='$mockdir' }" -e 's#(\w+\@\w+):#$t/$1/#g'`
	args[${#args[*]}]="$na"
    fi	
done

shift

# simulate the command
#echo cp ${args[@]}
cp ${args[@]}
